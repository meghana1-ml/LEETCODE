class HelloWorld {
    static void Main() {
        int N=4;
        for (int i=1; i<=N; i++)
        {
            for (int j=1; j<=i; j++)
            {
                Console.Write(j);
            }
            for (int j=1; j<=2*N-2*i; j++)
            {
                Console.Write(" ");
            }
            for (int j=i; j>=1; j--)
            {
                Console.Write(j);
            }
            Console.WriteLine();
        }       
    }
}
